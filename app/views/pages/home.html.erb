<%= render 'layouts/header' %>
<div class="container">
  <h1>Home</h1>
  <div class="row row-cols-auto">
    <% if current_user %>
      <div class="col"><%= button_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-danger" %></div>
    <% else %>
      <div class="col"><%= button_to 'Sign up', new_user_registration_path, class: "btn btn-primary" %></div>

      <div class="col"><%= button_to 'Sign in', new_user_session_path, class: "btn btn-primary" %></div>
    <% end %>
  </div>
</div>

