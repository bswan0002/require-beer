<%= render 'layouts/projects' %>
<div class="container">
  <h1><%= @project.title %> | <%= link_to @project.user.email, dev_path(@project.user) %></h1>

  <p><%= @project.desc %></p>

  <p>
    <strong>Project Video</strong>
    <br />
    <% video_id = YouTubeAddy.extract_video_id(@project.vidlink) %>
    <iframe width="854" height="480" src="http://www.youtube.com/embed/<%= video_id %>" frameborder="0" allowfullscreen></iframe>
    <br />
  </p>

  <div class="row row-cols-auto mb-4 gx-4">
    <div class="d-flex align-items-center">
    <div class="col">
      <a href="<%= @project.gitlink %>">
      <img src="https://www.flaticon.com/svg/static/icons/svg/25/25231.svg" width=75 height=75>
      </a>
    </div>
    <div class="p-3">
      <div class="col text-nowrap">
        <%= link_to "Project Link", @project.gitlink %>
      </div>
    </div>
  </div>
  </div>
  <hr>
  <%= render partial: "actions" %>
</div>