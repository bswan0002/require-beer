<div class="row">
  <div class="col-sm">
  <table class="pretty table">
    <thead>
    <tr>
      <th>Sort</th>
      <th><%= sortable("title") %></th>
      <th><%= sortable("author") %></th>
      <th><%= sortable("published") %></th>
      <th><%= sortable("likes") %></th>
      <th colspan="3"></th>
    </tr>
    </thead>
  </table>
  </div>
  <% if user_signed_in? %>
    <div class="col-sm">
      <table class="pretty table">
        <thead>
        <tr>
          <th>Filter</th>
          <th><%= filterable("my liked posts") %></th>
          <th colspan="3"></th>
        </tr>
        </thead>
      </table>
    </div>
  <% end %>
</div>