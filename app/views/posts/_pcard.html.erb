<div class="col-sm">
  <div class="card">
    <div class="card-header">
      <%= post.user.email %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.title, post, class: "stretched-link" %></h5>
      <p class="card-text"><%= post.preview %></p>
      <div class="text-end">
        <p class="card-text"><small><%= "Likes: #{post.like_count} | #{post.published}" %></p></small>
      </div>
    </div>
  </div>
</div>