<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Title', sort_by_col_path(c: "titleAsc") %></th>
      <th><%= link_to 'Author', sort_by_col_path(c: "authorAsc") %></th>
      <th><%= link_to 'Published', sort_by_col_path(c: "publishedAsc") %></th>
      <th><%= link_to 'Likes', sort_by_col_path(c: "likesDesc") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.email %></td>
        <td><%= post.created_at.strftime("%b. %d %Y") %></td>
        <td><%= post.likes.count %></td>
        <td><%= link_to 'Show', post %></td>
        <% if admin? %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>
