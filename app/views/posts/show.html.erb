<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<% if admin? %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>

<%= link_to 'Back', posts_path %>

<% if user_signed_in? %>
  <% if @post.liked?(current_user) %>
    <%= button_to "Like", like_path(@post), method: "put", disabled: true %>
  <% else %>
    <%= button_to "Like", like_path(@post), method: "put" %>
  <% end %>
  <%= form_for([@post, @post.comments.build]) do |f| %>
    <div class="field">
      <%= f.label "comment:" %><br />
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit "Comment" %>
    </div>
  <% end %>
<% end %>

<% @comments.each do |comment| %>
  <% if comment.user %>
    <%= "#{comment.user.email}: #{comment.body}" %><br>
  <% end %>
<% end %>
